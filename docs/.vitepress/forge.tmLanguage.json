{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "forge",
  "scopeName": "source.forge",
  "fileTypes": ["forge"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#durations" },
    { "include": "#numbers" },
    { "include": "#colors" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#reactive" },
    { "include": "#functions" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.forge",
          "match": "#(?![0-9a-fA-F]{3,8}\\b).*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.forge",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.forge",
              "match": "\\\\."
            },
            {
              "name": "variable.other.interpolated.forge",
              "match": "\\{\\$?[a-zA-Z_][a-zA-Z0-9_.]*\\}"
            }
          ]
        }
      ]
    },
    "durations": {
      "patterns": [
        {
          "name": "constant.numeric.duration.forge",
          "match": "\\b\\d+(\\.\\d+)?(ms|s|m|h)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.forge",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.float.forge",
          "match": "\\b-?\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.forge",
          "match": "\\b-?\\d+\\b"
        },
        {
          "name": "constant.numeric.percentage.forge",
          "match": "\\b\\d+%"
        }
      ]
    },
    "colors": {
      "patterns": [
        {
          "name": "constant.other.color.hex.forge",
          "match": "#[0-9a-fA-F]{8}\\b"
        },
        {
          "name": "constant.other.color.hex.forge",
          "match": "#[0-9a-fA-F]{6}\\b"
        },
        {
          "name": "constant.other.color.hex.forge",
          "match": "#[0-9a-fA-F]{4}\\b"
        },
        {
          "name": "constant.other.color.hex.forge",
          "match": "#[0-9a-fA-F]{3}\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.definition.forge",
          "match": "\\b(asset|entity|layout|machine|config|rule|scenario|behavior|condition|game|interaction|display-template)\\b"
        },
        {
          "name": "keyword.control.block.forge",
          "match": "\\b(params|geometry|parts|states|animations|screen|render|styles|rooms|doors|terminals|switches|assets|wallLights|initial|effect|trigger|player|collision)\\b"
        },
        {
          "name": "keyword.control.flow.forge",
          "match": "\\b(when|on|match|if|elif|else|for|while|break|continue|return)\\b"
        },
        {
          "name": "keyword.control.geometry.forge",
          "match": "\\b(voxel|voxels|box|repeat|child)\\b"
        },
        {
          "name": "keyword.control.animation.forge",
          "match": "\\b(animate|spin|bob|pulse|fade|play|setState|stopAnimation|loop)\\b"
        },
        {
          "name": "keyword.control.layout.forge",
          "match": "\\b(connects|facing|control|coordinate)\\b"
        },
        {
          "name": "keyword.control.render.forge",
          "match": "\\b(text|row|code|spacer|divider|centered|lineNumbers)\\b"
        },
        {
          "name": "keyword.control.event.forge",
          "match": "\\b(set|emit|on_interact|on_start|on_victory|on_gameover)\\b"
        },
        {
          "name": "keyword.control.game.forge",
          "match": "\\b(ship|layout|scenario|spawn_room|spawn_position|controller|target|range|prompt|prompt_broken|where|type|message|width|height|header|footer|rows|label|value|color|nominal|warning|error)\\b"
        },
        {
          "name": "keyword.control.function.forge",
          "match": "\\b(def)\\b"
        },
        {
          "name": "constant.language.boolean.forge",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "keyword.operator.logical.forge",
          "match": "\\b(and|or|not|in)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.forge",
          "match": "\\b(int|float|bool|string)\\b"
        },
        {
          "name": "storage.type.compound.forge",
          "match": "\\b(vec2|vec3|enum|ref|list)\\b"
        },
        {
          "name": "support.type.voxel.forge",
          "match": "\\b(AIR|HULL|METAL|FLOOR|WALL|CEILING|DOOR_FRAME|DOOR_PANEL|SCREEN|LED_GREEN|LED_RED|LED_YELLOW|LED_AMBER|BUTTON|BUTTON_RED|SWITCH|SWITCH_BUTTON|DUCT|GLASS|VENT|LIGHT|WARN_LIGHT|GRATE|VENT_BLADE|PANEL|TERMINAL_FRAME|TERMINAL_SCREEN|SWITCH_LEVER|SWITCH_BASE|WALL_LIGHT)\\b"
        },
        {
          "name": "support.type.state.forge",
          "match": "\\b(OPEN|CLOSED|LOCKED|SEALED|OK|FAULT|DAMAGED|STANDBY|OFFLINE|STATUS|COMMAND|ENGINEERING)\\b"
        },
        {
          "name": "support.type.controller.forge",
          "match": "\\b(first_person|third_person|fixed_camera|cylinder|box|none)\\b"
        },
        {
          "name": "support.type.direction.forge",
          "match": "\\b(north|south|east|west)\\b"
        },
        {
          "name": "support.type.trigger.forge",
          "match": "\\b(tick|victory|defeat|checkpoint)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.position.forge",
          "match": "\\b(at|size|to|from|step|as|using|name|anchor|rotation|intensity|status)\\b"
        },
        {
          "name": "keyword.operator.connection.forge",
          "match": "<->"
        },
        {
          "name": "keyword.operator.arrow.forge",
          "match": "->"
        },
        {
          "name": "keyword.operator.range.forge",
          "match": "\\.\\."
        },
        {
          "name": "keyword.operator.intensity.forge",
          "match": "@"
        },
        {
          "name": "keyword.operator.comparison.forge",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.forge",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.assignment.forge",
          "match": ":"
        }
      ]
    },
    "reactive": {
      "patterns": [
        {
          "name": "variable.other.reactive.forge",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_.]*"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.forge",
          "match": "\\b(clamp|abs|min|max|floor|ceil|round|sin|cos|sqrt|lerp|easeIn|easeOut|easeInOut|easeInQuad|easeOutQuad|easeInOutQuad|easeInCubic|easeOutCubic|easeInOutCubic|linear|step)\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "match": "^\\s*(asset|entity|layout|machine|config|rule|scenario|behavior|condition|game|interaction|display-template|def)\\s+([a-zA-Z_][a-zA-Z0-9_-]*)",
          "captures": {
            "1": { "name": "keyword.control.definition.forge" },
            "2": { "name": "entity.name.type.forge" }
          }
        },
        {
          "name": "variable.other.property.forge",
          "match": "^\\s+([a-zA-Z_][a-zA-Z0-9_-]*)\\s*:",
          "captures": {
            "1": { "name": "variable.other.property.forge" }
          }
        }
      ]
    }
  }
}
