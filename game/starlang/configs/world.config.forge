# World Configuration
# Defines lighting, fog, and other world parameters

config world
  lighting:
    ambient_color: #404050
    ambient_intensity: 0.4
    directional_intensity: 0.6

  fog:
    color: #101520
    near: 10
    far: 100

  interaction:
    range: 2.5
    switch_height_min: 0.8
    switch_height_max: 1.4
