{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"" },
    { "open": "'", "close": "'" }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(asset|entity|layout|machine|params|geometry|parts|states|animations|screen|render|styles|events|on|when|match|rooms|doors|terminals|switches|assets|child|repeat)\\b.*:\\s*$",
    "decreaseIndentPattern": "^\\s*$"
  },
  "folding": {
    "offSide": true
  }
}
